<%= form_with(model: oauth_client) do |form| %>
  <% if oauth_client.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(oauth_client.errors.count, "error") %> Erro:</h2>

      <ul>
        <% oauth_client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='mt-3'>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div class='mt-3'>
    <%= form.submit %>
  </div>
<% end %>
